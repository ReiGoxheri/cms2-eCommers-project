{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "base",
					"color": "#000000",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#ffffff",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#987FA4",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#252D58",
					"name": "Secondary"
				}
			]
		},
		"layout": {
			"contentSize": "1550px",
			"wideSize": "1800px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Poppins Regular",
					"slug": "poppins-regular",
					"fontFamily": "\"Poppins\", sans-serif"
				},
				{
					"name": "Poppins Medium Italic",
					"slug": "poppins-medium-italic",
					"fontFamily": "\"Poppins\", sans-serif"
				},
				{
					"name": "Bebas Neue",
					"slug": "bebas-neue",
					"fontFamily": "\"Bebas Neue\", cursive"
				},
				{
					"name": "Inter Regular",
					"slug": "inter-regular",
					"fontFamily": "\"Inter\", sans-serif"
				}				
			]
		},
		"customTemplates": [
			{
				"name": "single",
				"title": "Single Post",
				"postTypes": ["post"]
			},
			{
				"name": "page",
				"title": "Page",
				"postTypes": ["page"]
			},
			{
				"name": "archive",
				"title": "Archive",
				"postTypes": ["post"]
			},
			{
				"name": "404",
				"title": "404 Page",
				"postTypes": ["page"]
			}
		]

	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--montserrat-regular)"
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		}
	}
}
